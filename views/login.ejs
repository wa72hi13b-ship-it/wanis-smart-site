<section class="card" style="max-width:560px;margin:0 auto">
  <h2><%= tr.login %></h2>
  <% if (error){ %><div class="error"><%= error %></div><div class="hr"></div><% } %>
  <form method="post" action="/admin/login?lang=<%= lang %>">
    <label class="small">User</label>
    <input class="input" name="user" required />
    <div style="height:8px"></div>
    <label class="small">Password</label>
    <input class="input" name="pass" type="password" required />
    <div style="height:12px"></div>
    <button class="btn primary" type="submit"><%= tr.login %></button>
  </form>
  <div class="hr"></div>
  <p class="small">غيّر كلمة المرور في config.json قبل النشر.</p>
</section>
